<UserControl x:Class="ToolBox.Pages.FiltrationArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ToolBox.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\Styles\Colors.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>
        <TextBlock Text="Średnica filtra:" FontFamily="Century Gothic" FontSize="20" FontStyle="Italic" Margin="0,25,0,0" >
            <TextBlock.Foreground>
                <SolidColorBrush Color="{StaticResource SecondApplicationColor}" />
            </TextBlock.Foreground>
        </TextBlock>
    </Grid>
</UserControl>
